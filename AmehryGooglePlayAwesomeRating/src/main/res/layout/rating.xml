<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/RatingTxt"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/blackTransparent"
            android:textSize="18sp"
            android:text="Please Rate Us"
            android:fontFamily="sans-serif-black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:id="@+id/r1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/r1i"
                    android:adjustViewBounds="true"
                    android:src="@drawable/rate1inactive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:id="@+id/r2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/r2i"
                    android:adjustViewBounds="true"
                    android:src="@drawable/rate2inactive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:id="@+id/r3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/r3i"
                    android:adjustViewBounds="true"
                    android:src="@drawable/rate3inactive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:id="@+id/r4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/r4i"
                    android:adjustViewBounds="true"
                    android:src="@drawable/rate4inactive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="10dp"
                android:id="@+id/r5"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/r5i"
                    android:adjustViewBounds="true"
                    android:src="@drawable/rate5inactive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="1"
                android:visibility="visible"
                android:text="Dismiss"
                android:textColor="@color/blackTransparent"
                android:id="@+id/Exit"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:layout_marginEnd="30dp"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:visibility="visible"
                android:text="Submit Rating"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/btnactive"
                android:textColor="@color/white"
                android:id="@+id/Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>